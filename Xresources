! extended base16-bright from https://github.com/chriskempson/base16-shell
! sync with st config.h et al

! normal
#define base00 $BASE16_black
#define base08 $BASE16_red
#define base0B $BASE16_green
#define base0A $BASE16_yellow
#define base0D $BASE16_blue
#define base0E $BASE16_magenta
#define base0C $BASE16_cyan
#define base05 $BASE16_white

! bright colour variants created by multiplying LCh by 1.25 in GIMP
#define base03 $BASE16_bright_black
#define base08b $BASE16_bright_red
#define base0Bb $BASE16_bright_green
#define base0Ab $BASE16_bright_yellow
#define base0Db $BASE16_bright_blue
#define base0Eb $BASE16_bright_magenta
#define base0Cb $BASE16_bright_cyan
#define base07 $BASE16_bright_white

! extended, normally occupying the bright colour variants
#define base09 $BASE16_orange
#define base0F $BASE16_brown
#define base01 $BASE16_lighter_background
#define base02 $BASE16_selection_background
#define base04 $BASE16_dark_foreground
#define base06 $BASE16_light_foreground

*foreground:   base05
#ifdef background_opacity
*background:   [background_opacity]base00
#else
*background:   base00
#endif
*cursorColor:  base06

*color0:       base00
*color1:       base08
*color2:       base0B
*color3:       base0A
*color4:       base0D
*color5:       base0E
*color6:       base0C
*color7:       base05

*color8:       base03
*color9:       base08b
*color10:      base0Bb
*color11:      base0Ab
*color12:      base0Db
*color13:      base0Eb
*color14:      base0Cb
*color15:      base07

! these are not read by xterm when it starts
! man page states "Resources past color15 are available as a compile-time option"
*color16:      base09
*color17:      base0F
*color18:      base01
*color19:      base02
*color20:      base04
*color21:      base06

! xterm
XTerm.termName: xterm-256color
XTerm.vt100.faceName: Monospace
XTerm.vt100.faceSize: $FONT_SIZE_PT
XTerm.saveLines: 0
