#!/bin/sh

set -e

devicepath="/sys/devices/pci0000:40/0000:40:03.1/0000:43:00.0/0000:44:00.0/0000:45:00.0"

if [ "${1}" = "-v" ]; then

	echo "pp_od_clk_voltage"
	echo "================="
	cat "${devicepath}/pp_od_clk_voltage"
	echo "================="
	echo
	
	echo "power_dpm_force_performance_level"
	echo "================="
	cat "${devicepath}/power_dpm_force_performance_level"
	echo "================="
	echo
	
	echo "power1_cap"
	echo "================="
	cat "${devicepath}/hwmon/hwmon0/power1_cap"
	echo "================="
	echo
fi

echo "pp_dpm_sclk"
echo "==========="
cat "${devicepath}/pp_dpm_sclk"
echo "==========="
echo

echo "pp_dpm_mclk"
echo "==========="
cat "${devicepath}/pp_dpm_mclk"
echo "==========="
echo

echo "amdgpu_pm_info"
echo "=============="
grep -A 9 "^GFX" /sys/kernel/debug/dri/0/amdgpu_pm_info
echo "=============="
echo
