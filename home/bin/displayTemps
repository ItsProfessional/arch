#!/bin/sh

BASEDIR=/tmp/amc-temps
[ ! -d "${BASEDIR}" ] && exit

for f in $(ls ${BASEDIR}/Tc*)
do
    rawTemp="$(cat "${f}")"
    temp=$((${rawTemp} / 1000))
    if [ -z "${printed}" ]; then
        printf "   Tc %s" "${temp}"
        printed=true
    else
        printf "/%s" "${temp}"
    fi
done

unset printed
for f in $(ls ${BASEDIR}/Tg*)
do
    rawTemp="$(cat "${f}")"
    temp=$((${rawTemp} / 1000))
    if [ -z "${printed}" ]; then
        printf "   Tg %s" "${temp}"
    else
        printf "/%s" "${temp}"
    fi
done
