#!/bin/sh

set -e

echo "r" > /sys/devices/pci0000:40/0000:40:03.1/0000:43:00.0/0000:44:00.0/0000:45:00.0/pp_od_clk_voltage
echo "c" > /sys/devices/pci0000:40/0000:40:03.1/0000:43:00.0/0000:44:00.0/0000:45:00.0/pp_od_clk_voltage

# this causes a panic if an app is currently rendering...
echo "auto" > /sys/devices/pci0000:40/0000:40:03.1/0000:43:00.0/0000:44:00.0/0000:45:00.0/power_dpm_force_performance_level

echo "240000000" > /sys/devices/pci0000:40/0000:40:03.1/0000:43:00.0/0000:44:00.0/0000:45:00.0/hwmon/hwmon3/power1_cap

gpuMonitor -v
