#!/bin/sh

set -e

devicepath="/sys/devices/pci0000:40/0000:40:03.1/0000:43:00.0/0000:44:00.0/0000:45:00.0"

# 0  852MHz  800mV
# 1  991MHz  900mV
# 2 1084MHz  950mV
# 3 1138MHz 1000mV
# 4 1200MHz 1050mV
# 5 1401MHz 1100mV
# 6 1536MHz 1150mV
# 7 1630MHz 1200mV
# undervolting doesn't seem to take effect; as soon as we increase beyond the stock 1630 it begins increasing to the cap of 1200
echo "s 7 1732 1175" > "${devicepath}/pp_od_clk_voltage"

# 0 167MHz  800mV
# 1 500MHz  800mV
# 2 800MHz  950mV
# 3 945MHz 1100mV
echo "m 3 1100 1050" > "${devicepath}/pp_od_clk_voltage"

echo "c" > "${devicepath}/pp_od_clk_voltage"

echo "profile_peak" > "${devicepath}/power_dpm_force_performance_level"

cat "${devicepath}/hwmon/hwmon0/power1_cap_max" > "${devicepath}/hwmon/hwmon0/power1_cap"

gpumonitor -v
