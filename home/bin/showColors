#!/bin/sh

# sourced from git@bitbucket.org:robbieg/bin.git

ansiName()
{
  # this is the slickest portable implementation of this i can find
  n=${1:?}
  set "black" "red" "green" "yellow" "blue" "magenta" "cyan" "white"
  shift $n
  echo $1
}

echo "Ansi Colors"
for color in $(seq 0 7)
do
  printf "%8s %02d" $(ansiName $color) $color
  printf " \033[48;5;${color}m    \033[0m"
  brightcolor=$((color + 8))
  printf "%8s %02d" "bright" $brightcolor
  printf " \033[48;5;${brightcolor}m    \033[0m"
  echo
done
echo

echo "Color Cube"
printf "%4s" ""
for b in $(seq 0 5)
do
  printf "%2d" $b
done
for g in $(seq 1 5)
do
  printf "%4d%10s" $((6*g)) ""
done
echo
for r in $(seq 0 5)
do
  printf "%3d " $((16 + 6*6*r))
  for g in $(seq 0 5)
  do
    for b in $(seq 0 5)
    do
      color=$((16 + 6*6*r + 6*g + b))
      printf "\033[48;5;${color}m  \033[0m"
    done
    printf "  "
  done
  echo
done
echo

echo "Greys"
for grey in $(seq 0 23)
do
    color=$((232+grey))
    printf " \033[48;5;${color}m   \033[0m"
done
echo
for grey in $(seq 0 23)
do
    color=$((232+$grey))
    printf " ${color}"
done
echo
echo

echo "Ansi Contrast"
printf "%10s" ""
for bg in $(seq 0 7)
do
  printf " %-7s %02d" $(ansiName $bg) $bg
done
echo
sample="  Sample  "
for fg in $(seq 0 7)
do
  printf "%7s %02d" $(ansiName $fg) $fg
  fgcolor=$((30+fg))
  for bg in $(seq 0 7)
  do
    bgcolor=$((40+bg))
    printf " \033[${fgcolor}m\033[${bgcolor}m${sample}\033[0m"
  done
  echo
  printf " bright %02d" $((8+fg))
  for bg in $(seq 0 7)
  do
    bgcolor=$((40+bg))
    printf " \033[${fgcolor}m\033[${bgcolor}m\033[1m${sample}\033[0m"
  done
  echo
done
echo

echo "Ansi vs Default"
printf "%10s" ""
for fg in $(seq 0 7)
do
  printf " %-7s %02d" $(ansiName $fg) $fg
done
echo
sample="  Sample  "

bgcolor=$((49))
printf "%10s" "foreground"
for fg in $(seq 0 7)
do
  fgcolor=$((30+fg))
  printf " \033[${fgcolor}m\033[${bgcolor}m${sample}\033[0m"
done
echo
printf "%10s" "bright"
for fg in $(seq 0 7)
do
  fgcolor=$((30+fg))
  printf " \033[${fgcolor}m\033[${bgcolor}m\033[1m${sample}\033[0m"
done
echo
fgcolor=$((39))
printf "%10s" "background"
for bg in $(seq 0 7)
do
  bgcolor=$((40+bg))
  printf " \033[${fgcolor}m\033[${bgcolor}m${sample}\033[0m"
done
echo
printf "%10s" "bright"
for bg in $(seq 0 7)
do
  bgcolor=$((40+bg))
  printf " \033[${fgcolor}m\033[${bgcolor}m\033[1m${sample}\033[0m"
done
echo

echo "Default vs Default"
fgcolor=$((39))
bgcolor=$((49))
printf "%10s" "default"
printf " \033[${fgcolor}m\033[${bgcolor}m\033[0m${sample}\033[0m"
echo
printf "%10s" "bright"
printf " \033[${fgcolor}m\033[${bgcolor}m\033[1m${sample}\033[0m"
echo
