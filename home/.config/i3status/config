# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        interval = 1
        #color_good = "#00FF00"
        #color_bad = "#FF0000"
        #color_degraded = "#FFFF00"
}

order += "run_watch VPN"
run_watch VPN {
        pidfile = "/proc/sys/net/ipv4/conf/vpn0"
        format = "VPN"
        format_down = ""
        color_good = "#FFFF00"
}

order += "wireless _first_"
wireless _first_ {
        #format_up = "W (%quality at %essid) %ip"
        format_up = "W %ip"
        format_down = ""
        color_good = "#FFFFFF"
}

order += "ethernet _first_"
ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E %ip"
        format_down = ""
        color_good = "#FFFFFF"
}

order += "cpu_usage"
cpu_usage {
        format = "C %usage"
        degraded_threshold = 50
        max_threshold = 75
}

order += "battery all"
battery all {
        format = "%status %percentage %remaining"
        format_down = ""
}

order += "volume master"
volume master {
        format = "Vo %volume"
        format_muted = "Vo"
        color_degraded = "#FFFFFF"
}

order += "volume input"
volume input {
        format = "Vi %volume"
        format_muted = "Vi"
        color_degraded = "#FFFFFF"
}

order += "tztime local"
tztime local {
        format = "%a %Y-%m-%d %H:%M:%S"
}
