 1 file changed, 2 insertions(+), 1 deletion(-)

diff --git a/autoload/nerdtree/ui_glue.vim b/autoload/nerdtree/ui_glue.vim
index fc22f21..79584e6 100644
--- a/autoload/nerdtree/ui_glue.vim
+++ b/autoload/nerdtree/ui_glue.vim
@@ -308,7 +308,8 @@ function! s:findAndRevealPath(pathStr) abort
     endif
 
     try
-        let l:pathStr = g:NERDTreePath.Resolve(l:pathStr)
+        " AMC please do not resolve symlinks
+        " let l:pathStr = g:NERDTreePath.Resolve(l:pathStr)
         let l:pathObj = g:NERDTreePath.New(l:pathStr)
     catch /^NERDTree.InvalidArgumentsError/
         call nerdtree#echoWarning('invalid path')
