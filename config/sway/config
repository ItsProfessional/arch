include appearance.config
include keys.config


# mouse
tiling_drag disable


# startup
exec way-displays > /tmp/way-displays.${XDG_VTNR}.${USER}.log 2>&1


# input
input type:keyboard {
    xkb_model "pc105"
    xkb_layout "us,us"
    xkb_variant "dvp,"
    xkb_options "caps:escape,grp:win_space_toggle"
}
input type:touchpad {
    tap enabled
    natural_scroll enable
}
input type:pointer {
    accel_profile flat
    pointer_accel 0
}


# decorations
for_window [shell="xwayland"] title_format "%title (%shell)"


# gaps
gaps inner 1
gaps outer -1
smart_gaps on
smart_borders on
default_border normal 1

