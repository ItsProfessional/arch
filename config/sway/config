include appearance.config
include keys.config


# mouse
tiling_drag disable


# keys
bindsym $mod1+x exec bemenu-run
bindsym $mod2+x exec exec $(menjar) > /dev/null 2>&1
bindsym $mod3+l exec swaylock -f -c ${BASE01} > /dev/null 2>&1


# startup
exec way-displays > /tmp/way-displays.${XDG_VTNR}.${USER}.log 2>&1
# exec swayidle -w \
# 	timeout 180  'swaylock -f -c ${BASE01}' \
# 	before-sleep 'swaylock -f -c ${BASE01}' \
# 	timeout 300  'swaymsg "output * dpms off"' \
# 	resume       'swaymsg "output * dpms on"' \
# 	> /tmp/swayidle.${XDG_VTNR}.${USER}.log 2>&1


# input
input type:keyboard {
    xkb_model "pc105"
    xkb_layout "us,us"
    xkb_variant "dvp,"
    xkb_options "caps:escape,grp:win_space_toggle"
    repeat_delay 400
    repeat_rate 50
}
input type:touchpad {
    tap enabled
    natural_scroll enable
}
input type:pointer {
    accel_profile flat
    pointer_accel 0
}


# decorations
for_window [shell="xwayland"] title_format "%title (%shell)"


# gaps
gaps inner 1
gaps outer -1
smart_gaps on
smart_borders on
default_border normal 1


# output HDMI-A-1 mode 1920x1080
# output HDMI-A-1 scale 1
# output HDMI-A-1 transform 90
# output HDMI-A-1 position 2560 0
# output HDMI-A-1 transform flipped-180

# output eDP-1 mode 2560x1440
# output eDP-1 scale 1
# output eDP-1 transform 0
# output eDP-1 position 0 0
# output eDP-1 transform flipped

bindsym $mod3+m mirror HDMI-A-1 eDP-1 WLR_MIRROR_CENTER 10 0 1720 880


bindsym $mod3+t output HDMI-A-1 toggle

