# sway cannot use environment variables
# base16 bright
set $base00 #000000
set $base01 #303030
set $base02 #505050
set $base03 #b0b0b0
set $base04 #d0d0d0
set $base05 #e0e0e0
set $base06 #f5f5f5
set $base07 #ffffff
set $base08 #fb0120
set $base09 #fc6d24
set $base0A #fda331
set $base0B #a1c659
set $base0C #76c7b7
set $base0D #6fb3d2
set $base0E #d381c3
set $base0F #be643c

font pango:monospace 11

default_border normal 1
hide_edge_borders smart

bar {
    position top
    status_command slstatus -s
    colors {
        background $base01
        separator  $base04
        statusline $base04

        #                   Border  BG      Text
        focused_workspace   $base02 $base02 $base05
        active_workspace    $base02 $base02 $base04
        inactive_workspace  $base01 $base01 $base04
        urgent_workspace    $base03 $base02 $base05
        binding_mode        $base02 $base02 $base05
    }
}
#                       Border    BG      Text    Indicat Child Border
client.focused          $base03 $base02 $base05 $base02 $base03
client.focused_inactive $base02   $base01 $base04 $base01 $base01
client.unfocused        $base02   $base01 $base04 $base01 $base01
client.urgent           $base03   $base02 $base05 $base03 $base03
client.placeholder      $base02   $base01 $base04 $base01 $base01
client.background       $base00

for_window [shell="xwayland"] title_format "%title (%shell)"

gaps inner 1
gaps outer -1
smart_gaps on
smart_borders on
default_border normal 1

# zoom meeting window gets upset when:
# - the cursor is over it when it starts
# - the main window is tiled
for_window [app_id="zoom"] floating enable, floating_maximum_size 800 x 600

# vim: set filetype=i3config :
