for_window [shell="xwayland"] title_format "%title (%shell)"

gaps inner 1
gaps outer -1
smart_gaps on
smart_borders on
default_border normal 1

# zoom meeting window gets upset when:
# - the cursor is over it when it starts
# - the main window is tiled
for_window [app_id="zoom"] floating enable, floating_maximum_size 800 x 600

