# i3 cannot use variables from included files

# base16 bright
set $base00 #000000
set $base01 #303030
set $base02 #505050
set $base03 #b0b0b0
set $base04 #d0d0d0
set $base05 #e0e0e0
set $base06 #f5f5f5
set $base07 #ffffff
set $base08 #fb0120
set $base09 #fc6d24
set $base0A #fda331
set $base0B #a1c659
set $base0C #76c7b7
set $base0D #6fb3d2
set $base0E #d381c3
set $base0F #be643c

font pango:monospace 11

bar {
    position top
    status_command slstatus -s
    colors {
        background $base01
        separator  $base04
        statusline $base04

        #                   Border  BG      Text
        focused_workspace   $base02 $base02 $base06
        active_workspace    $base01 $base01 $base04
        inactive_workspace  $base01 $base01 $base04
        urgent_workspace    $base03 $base02 $base06
        binding_mode        $base02 $base02 $base06
    }
}
#                       Border  BG      Text    Indicat Child Border
client.focused          $base02 $base02 $base06 $base02 $base02
client.focused_inactive $base02 $base01 $base04 $base01 $base01
client.unfocused        $base02 $base01 $base04 $base01 $base01
client.urgent           $base03 $base02 $base06 $base03 $base03
client.placeholder      $base02 $base01 $base04 $base01 $base01
client.background       $base00

for_window [title="Bitwarden"] floating enable

# https://www.reddit.com/r/swaywm/comments/l9asbc/zoom_on_sway_what_settings_do_you_use/
#
# Zoom Meeting App
#
# Default for all windows is non-floating.
#
# For pop up notification windows that don't use notifications api
for_window [app_id="zoom" title="^zoom$"] border none, floating enable
# For specific Zoom windows
for_window [app_id="zoom" title="^(Zoom|About)$"] border pixel, floating enable
for_window [app_id="zoom" title="Settings"] floating enable, floating_minimum_size 960 x 700

