set $mod1 Mod1
set $mod2 Mod1+Ctrl
set $mod3 Mod1+Ctrl+Shift


# mouse
floating_modifier $mod1
bindsym --whole-window $mod1+button2 floating toggle


# thumb
bindsym $mod1+Escape floating toggle
bindsym $mod1+space fullscreen
bindsym $mod1+Return exec exec alacritty > /dev/null 2>&1
bindsym $mod2+Return exec exec browser > /dev/null 2>&1
bindsym $mod2+space exec exec browser google-chrome-stable > /dev/null 2>&1
bindsym $mod1+Tab exec i3-msg "[con_id=$(cat /tmp/last_focus)] focus"


# special
bindsym XF86AudioLowerVolume exec vollower
bindsym XF86AudioRaiseVolume exec volraise
bindsym XF86AudioMute exec volmute
bindsym XF86AudioMicMute exec volmutemic

# left

# @
bindsym $mod1+a exec sway-workspace-or-focus 1 right
bindsym $mod2+a move container to workspace number 1; workspace 1
bindsym $mod1+o exec sway-workspace-or-focus 2 right
bindsym $mod2+o move container to workspace number 2; workspace 2
bindsym $mod1+e exec sway-workspace-or-focus 3 right
bindsym $mod2+e move container to workspace number 3; workspace 3
bindsym $mod1+u exec sway-workspace-or-focus 4 right
bindsym $mod2+u move container to workspace number 4; workspace 4
bindsym $mod3+u exec volraise
bindsym $mod1+i exec sway-workspace-or-focus 5 right
bindsym $mod2+i move container to workspace number 5; workspace 5
bindsym $mod3+i exec volmutemic

# $
bindsym $mod1+semicolon exec sway-workspace-or-focus 6 right
bindsym $mod2+semicolon move container to workspace number 6; workspace 6
bindsym $mod1+comma exec sway-workspace-or-focus 7 right
bindsym $mod2+comma move container to workspace number 7; workspace 7
bindsym $mod1+period exec sway-workspace-or-focus 8 right
bindsym $mod2+period move container to workspace number 8; workspace 8
bindsym $mod3+period exec vollowermic
bindsym $mod1+p exec sway-workspace-or-focus 9 right
bindsym $mod2+p move container to workspace number 9; workspace 9
bindsym $mod3+p exec volraisemic
bindsym $mod1+y exec sway-workspace-or-focus 10 right
bindsym $mod2+y move container to workspace number 10; workspace 10
bindsym $mod3+y exec volmutemic

# \
bindsym $mod1+apostrophe focus parent
bindsym $mod1+q focus child
bindsym $mod3+q exit
bindsym $mod1+j focus down
bindsym $mod2+j move down
bindsym $mod3+j exec vollower
bindsym $mod1+k focus up
bindsym $mod2+k move up
bindsym $mod3+k exec volraise
bindsym $mod1+x exec dmenu_run                          -l 10 -fn monospace:size=11 -nb \#303030 -nf \#d0d0d0 -sb \#505050 -sf \#e0e0e0
bindsym $mod2+x exec j4-dmenu-desktop "--dmenu=dmenu -i -l 10 -fn monospace:size=11 -nb \#303030 -nf \#d0d0d0 -sb \#505050 -sf \#e0e0e0"
bindsym $mod3+x exec volmute


# right
bindsym $mod1+f focus mode_toggle
# g
bindsym $mod3+c reload
bindsym $mod1+l focus right
bindsym $mod2+l move right
# /

bindsym $mod1+d kill
bindsym $mod1+h focus left
bindsym $mod2+h move left
bindsym $mod1+t layout tabbed
bindsym $mod1+n layout toggle split
bindsym $mod1+s layout stacking
bindsym $mod1+minus scratchpad show
bindsym $mod2+minus move scratchpad

bindsym $mod1+b splitv
bindsym $mod1+m splith
# v
# z
# \

bindsym $mod1+Left resize shrink width 25px
bindsym $mod1+Down resize grow height 25px
bindsym $mod1+Up resize shrink height 25px
bindsym $mod1+Right resize grow width 25px

# vim: set filetype=i3config :
