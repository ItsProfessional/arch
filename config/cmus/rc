bind -f common j win-down
bind -f common k win-up
bind -f common h win-next
bind -f common l win-next

bind -f common down win-down
bind -f common up win-up
bind -f common left win-next
bind -f common right win-next

bind -f common u win-half-page-up
bind -f common ^U win-half-page-up
bind -f common d win-half-page-down
bind -f common ^D win-half-page-down
bind -f common g win-top
bind -f common m win-page-middle
bind -f common G win-bottom

bind -f common ? view settings
bind -f settings ? view tree

bind -f common / search-start
bind -f common n search-next
bind -f common N search-prev

bind -f common enter win-activate
bind -f common mlb_click_selected win-activate

bind -f common o win-toggle

bind -f common space player-pause

bind -f common J player-next
bind -f common K player-prev

bind -f common H seek -5
bind -f common L seek +5

bind -f common + vol +5%
bind -f common - vol -5%

bind -f common q quit

set mouse=true
set wrap_search=false

set aaa_mode=artist

set format_statusline= %{status}  %{position} / %{duration}%=%{?volume>=0?%{volume}%% }

set format_trackwin_va=%3n. %t%= %y %d

