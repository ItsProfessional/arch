Config { font = "xft:Hack:bold:size=11, -misc-fixed-*-*-*-*-11-*-*-*-*-*-*-*"
       , fgColor = "#ffffff"
       , bgColor = "gray20"
       , position = TopW L 95
       , commands = [ Run Date "%a %d %b %Y %H:%M:%S" "date" 10
                    , Run Cpu ["-t","C <total>%",
                               "-L","10","-H","50",
                               "--normal","green","--high","red"] 10
                    , Run Memory ["-t","M <usedratio>%",
                                  "-L","40","-H","70",
                                  "--normal","green","--high","red"] 10
                    , Run Swap ["-t","S <usedratio>%",
                                  "-L","10","-H","40",
                                  "--normal","green","--high","red"] 10
                    , Run DynNetwork ["-t","<dev> <rx>KB/s <tx>KB/s",
                                      "-L","524288","-H","1572864",
                                      "--normal","green","--high","red",
                                      "-S","False"] 10
                    , Run Battery ["-t", "<acstatus>"
                                  , "-l", "red"
                                  , "--", "-f", "ACAD/online"
                                  -- discharging status
                                  , "-o"   , "B <left>% (<timeleft>)"
                                  -- AC "on" status
                                  , "-O"   , "B <left>%"
                                  -- charged status
                                  , "-i"   , "B <left>%"
                                  ] 50
                    , Run StdinReader
                    ]
       , template = " %StdinReader% }{ %dynnetwork%   %cpu%   %memory%   %swap%   %battery%   %date% "
       }
