#!/bin/zsh

case "${HOST}" in
	"duke")
		;&
	"gigantor")
		;&
	"tinygod")
		# tenveo won't handle mute
		pactl get-source-volume @DEFAULT_SOURCE@ | grep " 0%" > /dev/null 2>&1
		if [ $? -eq 0 ]; then
			pactl set-source-volume @DEFAULT_SOURCE@ 100%
		else
			pactl set-source-volume @DEFAULT_SOURCE@ 0
		fi
		FONT_SIZE_PT=12
		;;
	*)
		pactl set-source-mute @DEFAULT_SOURCE@ toggle
		;;
esac
