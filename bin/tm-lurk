#!/bin/zsh

SID="$(tmux lsw -F '#{session_name}')"

if [[ "${SID}" = *-lurking ]]; then
	SID_LURKING="${SID}"
else
	SID_LURKING="${SID}-lurking"
fi

tmux rename-session -t "${SID}" "${SID_LURKING}"
tmux set-option status on
tmux set-option status-format '#[align=left]#{session_name}'

tmux detach -s "${SID_LURKING}"

