#!/bin/sh

for p in $(riverctl list-inputs | grep -B1 "type: pointer" --no-group-separator | grep -v "type: pointer"); do
	echo "pointer: ${p}"
	riverctl input "$p" pointer-accel 0
	riverctl input "$p" accel-profile flat
	if [ "${p#*ouch}" != "${p}" -o "${p#*rack}" != "${p}" ]; then
		echo " touch: ${p}"
		riverctl input "$p" tap enabled
		riverctl input "$p" natural-scroll enabled
	fi
done

