#!/bin/zsh

# use zsh so that we get environment

rm -rf "${HOME}/Downloads" 2>/dev/null || true
rm -rf "${XDG_DATA_HOME}/Trash" 2>/dev/null || true

find "${HOME}/.dl" ! -newermt yesterday -delete 2>/dev/null
find "${HOME}/.ss" ! -newermt yesterday -delete 2>/dev/null

find /tmp -maxdepth 1 -type d -name '.maven-bazel*' ! -newermt '-1 hours' -exec rm -rf {} \; 2>/dev/null

