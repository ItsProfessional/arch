#!/bin/zsh

nam=("00" "08" "0B" "0A" "0D" "0E" "0C" "05" "03" "09" "01" "02" "04" "06" "0F" "07")
defr=(0x18 0xab 0xa1 0xf7 0x7c 0xba 0x86 0xd8 0x58 0xdc 0x28 0x38 0xb8 0xe8 0xa1 0xf8)
defg=(0x18 0x46 0xb5 0xca 0xaf 0x8b 0xc1 0xd8 0x58 0x96 0x28 0x38 0xb8 0xe8 0x69 0xf8)
defb=(0x18 0x42 0x6c 0x88 0xc2 0xaf 0xb9 0xd8 0x58 0x56 0x28 0x38 0xb8 0xe8 0x46 0xf8)


for i in $(seq 1 1 16); do
	fg=$(( $i + 29 + $i / 9 * 52))
	bg=$(( $fg + 10 ))

	printf "\033[%dmbase%s\033[m" "${fg}" "${nam[i]}"
	printf "\033[%dm%12s\033[m  " "${bg}"

	printf "\033[48;2;%d;%d;%dm  " "${defr[1]}" "${defg[1]}" "${defb[1]}"
	printf "\033[38;2;%d;%d;%dmbase%s\033[m" "${defr[$i]}" "${defg[$i]}" "${defb[$i]}" "${nam[$i]}"
	printf "\033[48;2;%d;%d;%dm%12s\033[m" "${defr[$i]}" "${defg[$i]}" "${defb[$i]}"
	printf "\033[48;2;%d;%d;%dm  \033[m" "${defr[1]}" "${defg[1]}" "${defb[1]}"

	printf "\n"
done

printf "%20s\033[48;2;%d;%d;%dm%22s\033[m\n" "" "${defr[1]}" "${defg[1]}" "${defb[1]}" ""

