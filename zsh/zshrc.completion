fpath=(${XDG_DATA_HOME}/zsh/site-functions $fpath)

autoload -Uz compinit
compinit

# yq does not autocomplete files reliably
compdef -d yq

if [ "$(whence dircolors)" ]; then
	eval $(dircolors)

	zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}
	zstyle ':completion:*' menu select

	unset LS_COLORS
fi

