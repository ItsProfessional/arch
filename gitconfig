[alias]
	d = diff
	dn = d --name-only
	dw = d --ignore-all-space
	du = d --unified=10000
	duw = du --ignore-all-space

	ds = d --staged
	dsn = dn --staged
	dsw = dw --staged
	dsu = du --staged
	dsuw = duw --staged

	w = worktree
	wl = worktree list
	wb = "!f() { git worktree add ../$1 -b $1 ; }; f"
	wc = "!f() { git worktree add ../$1 $1 ; }; f"

	l = log --pretty='format:%C(yellow)%h%C(blue)%d%C(reset) %s %C(white) %C(green)%an  %C(cyan)%ah%C(reset)' --graph

	mti = mergetool --tool idea
	mtv = mergetool --tool vimdiff

	co = checkout
	r = restore
	rs = restore --staged

	sh = show --oneline
	shn = sh --name-status
	ss = status --short
	st = status
[user]
	name = Alexander Courtis
	email = alex@courtis.org
[core]
	excludesfile = ~/.gitignore
	pager = less --tabs=4
[push]
	default = current
	autoSetupRemote = true
[pull]
	rebase = interactive
[color]
	ui = auto

[remote]
	tagopt = --tags

[mergetool "idea"]
	cmd = idea merge "${LOCAL}" "${REMOTE}" "${BASE}" "${MERGED}" > /tmp/ideamerge.log 2>&1
	trustExitCode = true

# only use these when attempting a particularly large operation
#[merge]
	#renameLimit = 9999
#[diff]
	#renameLimit = 9999
