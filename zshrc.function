function mnt() {
	if [ ! -b "${1}" ]; then
		echo "'${1}' is inexistent"
		return 1
	fi
	pmount --sync "${1}"
	if [ "${?}" -eq 0 ]; then
		dir="$(findmnt -n -o TARGET ${1})"
		echo "${dir}"
		echo "${dir}" > /tmp/lastmntd
		cd "${dir}"
	fi
}

function umnt() {
	cd
	if [ ! -f /tmp/lastmntd ]; then
		echo "/tmp/lastmntd inexistent; pumount manually"
		return 1
	fi
	sync && pumount $(cat /tmp/lastmntd) && rm /tmp/lastmntd
}
